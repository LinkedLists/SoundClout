<!DOCTYPE html>
<html>
  <head>
    <title>JESUS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="icon" href="<%= image_url('favicon.png') %>">
    <%# this script will grab the current user and save it as preloadedState %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>"
        }
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
